[%  META
      title = 'Events'
      type  = 'text';

USE date;
USE events = datafile('data/events', delim = '|');
%]<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>[% site.name %]</title>
  <link href="[% site.uris.events %]" rel="alternate"/>
  <link href="[% site.uris.events %]feed.atom" rel="self"/>
  <updated>[% date.format(date.now, "%Y-%m-%dY%H:%M:%S") %]</updated>
  <author>
    <name>[% abbr.ttcs %]</name>
    <link>[% site.uri %]</link>
  </author>
  <id>[% site.uri %]</id>
  <rights>Â© 2008-[% date.format(date.now, "%Y") %] [% abbr.ttcsusa %]</rights>

[% FOREACH e IN events %]
  <entry>
    <title>[% e.title | xml %]</title>
    <id>[% site.uris.events %]#[% e.date %]-[% e.id %]</id>
    <link>[% site.uris.events %]#[% e.date %]-[% e.id %]</link>
    <summary>[% e.title | xml %]</summary>
    <content type="text/html">
      <p>[% e.title | xml %]</p>
      <img src="[% site.uris.flyers %]/[% e.date %]-[% e.id %].jpg" />
    </content>
  </entry>
[% END %]

</feed>
